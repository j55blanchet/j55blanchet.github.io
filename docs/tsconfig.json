{
	"compilerOptions": {
		"paths": {
			"$lib": [
				"../personal-website/src/lib"
			],
			"$lib/*": [
				"../personal-website/src/lib/*"
			]
		},
		"rootDirs": [
			"../personal-website",
			"./types"
		],
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"lib": [
			"esnext",
			"DOM",
			"DOM.Iterable"
		],
		"moduleResolution": "bundler",
		"module": "esnext",
		"noEmit": true,
		"target": "esnext"
	},
	"include": [
		"ambient.d.ts",
		"non-ambient.d.ts",
		"./types/**/$types.d.ts",
		"../personal-website/vite.config.js",
		"../personal-website/vite.config.ts",
		"../personal-website/src/**/*.js",
		"../personal-website/src/**/*.ts",
		"../personal-website/src/**/*.svelte",
		"../personal-website/tests/**/*.js",
		"../personal-website/tests/**/*.ts",
		"../personal-website/tests/**/*.svelte"
	],
	"exclude": [
		"../personal-website/node_modules/**"
	]
}